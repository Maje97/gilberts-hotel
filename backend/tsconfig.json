  "compilerOptions": {
    "target": "ES2017",                   
    "module": "CommonJS", 
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src", 
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  }
}
