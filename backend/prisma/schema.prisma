generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  role        Role     @default(USER)
  bookings    Booking[]
}

model Room {
  id          Int     @id @default(autoincrement())
  image       String
  name        String
  capacity    Int
  type        Type    @default(SINGLE)
  bookings    Booking[]
}

model Booking {
  id          Int     @id @default(autoincrement())
  room        Room?   @relation(fields: [roomId], references: [id])
  user        User?   @relation(fields: [userId], references: [id])
  roomId      Int?
  userId      Int?
  startTime   DateTime
  endTime     DateTime
}

enum Type {
  SINGLE
  DOUBLE
  FAMILY
}

enum Role {
  USER
  ADMIN
}
